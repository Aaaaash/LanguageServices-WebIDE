{
  "name": "LanguageServices-WebIDE",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare:env": "./node_modules/.bin/gulp download-java-server && ./node_modules/.bin/gulp install-py-server",
    "start": "export NODE_ENV=prod && node out/main.js",
    "dev": "export NODE_ENV=dev && ts-node src/main.ts",
    "build": "rm -rf out && tsc -p .",
    "pretest": "rm -rf __test__ && tsc -p test/",
    "clean:test": "rm -rf __test__",
    "test:ava": "node node_modules/ava/cli.js --verbose",
    "test": "export NODE_ENV=dev && npm run test:ava && npm run clean:test",
    "tslint": "tslint --project .",
    "pm2": "pm2 start npm -- start",
    "build:start": "rm -rf lsp-java-server && npm run pre-download && rm -rf out && tsc && node out/languageServer.js"
  },
  "dependencies": {
    "log4js": "^2.11.0",
    "socket.io": "^2.1.1",
    "vscode": "^1.1.17",
    "vscode-languageclient": "^4.1.4",
    "vscode-languageserver": "^4.1.3",
    "vscode-ws-jsonrpc": "^0.0.1-alpha.5",
    "which": "^1.3.1",
    "winreg": "^1.2.4",
    "ws": "^5.1.1"
  },
  "devDependencies": {
    "@types/glob": "^5.0.35",
    "@types/node": "^10.1.0",
    "@types/socket.io": "^1.4.33",
    "@types/winreg": "^1.2.30",
    "@types/ws": "^5.1.1",
    "ava": "1.0.0-beta.6",
    "gulp": "^3.9.1",
    "gulp-decompress": "^2.0.2",
    "gulp-download": "^0.0.1",
    "tap-nyan": "^1.1.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  },
  "ava": {
    "files": [
      "__test__/test/**/*.js"
    ]
  }
}
